# Server Configuration
LISTEN_PORT=5000
PUBLIC_URL=http://localhost:5000
DEBUG=true

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///terrareg.db

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/terrareg

# MySQL
# DATABASE_URL=mysql://user:password@localhost:3306/terrareg

# Storage Configuration
DATA_DIRECTORY=./data
UPLOAD_DIRECTORY=./data/upload

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ADMIN_AUTHENTICATION_TOKEN=change-this-admin-token

# Feature Flags
ALLOW_MODULE_HOSTING=true
ALLOW_PROVIDER_HOSTING=true
ALLOW_CUSTOM_GIT_PROVIDER=true
ENABLE_ACCESS_CONTROLS=false

# SAML Authentication (optional)
# SAML2_IDP_METADATA_URL=https://idp.example.com/metadata
# SAML2_ISSUER_ENTITY_ID=terrareg

# OpenID Connect Authentication (optional)
# OPENID_CONNECT_CLIENT_ID=terrareg
# OPENID_CONNECT_CLIENT_SECRET=your-client-secret
# OPENID_CONNECT_ISSUER=https://oidc.example.com

# External Services (optional)
# INFRACOST_API_KEY=your-infracost-api-key
# INFRACOST_PRICING_API_ENDPOINT=https://pricing.api.infracost.io

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_TRACES_SAMPLE_RATE=0.1

# Session Configuration
SESSION_EXPIRY_MINS=60

# Git Provider Configuration
# GIT_PROVIDER_CONFIG={}
